.chat-main
  .chat-main__group-info
    .chat-main__group-info__left-box
      .chat-main__group-info__left-box__group-name
        = @group.name
      .chat-main__group-info__left-box__name
        Member: 
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__edit-btn
      = link_to edit_group_path(@group) do
        Edit
  .chat-main__message-list
    = render @messages

  .chat-main__type-message
    = form_for [@group, @message] do |f|
      .chat-main__type-message__input-box
        = f.text_field :content, class: 'chat-main__type-message__input-box__message', placeholder: 'type a message'
        = f.label :image, class: 'chat-main__type-message__input-box__image' do
          =icon('fas', 'image')
          =f.file_field :image, class: 'chat-main__type-message__input-box__image__file'
      = f.submit 'Send', class: 'chat-main__type-message__submit-btn'
    
