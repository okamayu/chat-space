.chat-side
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        =current_user.name
      .side-bar__user-name__top-items__menu
        = link_to new_group_path do
          =icon('far', 'edit', class: 'icon')
        = link_to edit_user_path(current_user) do
          =icon('fas', 'cog', class: 'icon')

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__group
        = link_to group_messages_path(group) do
          .side-bar__group-list__group__group-name
            = group.name
          .side-bar__group-list__group__group-comment
            = group.show_last_message

    